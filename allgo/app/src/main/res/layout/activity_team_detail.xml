<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".TeamDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_teamimage"
            android:layout_width="193dp"
            android:layout_height="181dp"
            android:layout_marginTop="-60dp"
            app:layout_constraintEnd_toEndOf="@+id/txt_teamname"
            app:layout_constraintStart_toStartOf="@+id/txt_teamname"
            app:layout_constraintTop_toBottomOf="@+id/txt_teamname"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_teamname"
            android:layout_width="231dp"
            android:layout_height="114dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/aldrich"
            android:text="TeamName"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:background="@drawable/white_btn_background"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout5"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt_player1"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/aldrich"
            android:text="Player 1"
            android:textAlignment="center"
            android:textColor="#292929"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_player2"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aldrich"
            android:text="Player 2"
            android:textAlignment="center"
            android:textColor="#292929"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_player1" />

        <TextView
            android:id="@+id/txt_player3"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aldrich"
            android:text="Player 3"
            android:textAlignment="center"
            android:textColor="#292929"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_player2" />

        <TextView
            android:id="@+id/txt_player4"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aldrich"
            android:text="Player 4"
            android:textAlignment="center"
            android:textColor="#292929"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_player3" />

        <TextView
            android:id="@+id/txt_player5"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aldrich"
            android:text="Player 5"
            android:textAlignment="center"
            android:textColor="#292929"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_player4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>